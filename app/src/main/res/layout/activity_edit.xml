    <EditText
        android:id="@+id/edit_email"
        android:layout_below="@id/edit_number"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="60dp" />-->



    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_marginTop="16dp"
        android:background="@drawable/cardview_rec"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:hint="example"
                android:id="@+id/edit_name"
                android:layout_toLeftOf="@id/textname"
                android:textSize="18sp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/textname"
                android:textColor="@color/colorPrimaryDark"
                android:text="NAME"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_marginTop="16dp"
        android:background="@drawable/cardview_rec"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:hint="example@gmail.com"
                android:id="@+id/edit_email"
                android:layout_toLeftOf="@id/textname2"
                android:textSize="18sp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/textname2"
                android:textColor="@color/colorPrimaryDark"
                android:text="EMAIL"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv3"
        android:layout_marginTop="16dp"
        android:background="@drawable/cardview_rec"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/cv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:inputType="number"
                android:hint="12345-67890"
                android:id="@+id/edit_number"
                android:layout_toLeftOf="@id/textname3"
                android:textSize="18sp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/textname3"
                android:textColor="@color/colorPrimaryDark"
                android:text="MOBILE"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


