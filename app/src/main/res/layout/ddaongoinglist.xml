<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ongoing_parent"
    android:elevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:focusable="true">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_ongoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:textStyle="bold"
                android:id="@+id/adoongoingname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@color/shimmer_bg" />


            <TextView
                android:id="@+id/adoongoingaddress"
                android:layout_below="@+id/adoongoingname"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_bg"
                />

            <TextView
                android:layout_marginBottom="8dp"
                android:id="@+id/adoongoingdates"
                android:layout_below="@+id/adoongoingaddress"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_bg"
                />

        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>